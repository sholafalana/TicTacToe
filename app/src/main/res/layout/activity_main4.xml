            android:text=" "
            android:visibility="gone"
            android:textColor="#000000"
            android:textStyle="bold" />

        <Button
            android:id="@+id/eight1"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:textSize="35sp"
            android:layout_marginLeft="5px"
            android:text=" "
            android:visibility="gone"
            android:textColor="#000000"
            android:textStyle="bold" />

        <Button
            android:id="@+id/nine1"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:textSize="35sp"
