            android:layout_marginLeft="5px"
            android:text=" "
            android:visibility="gone"
            android:textColor="#000000"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:id="@+id/dialogue"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layerbelow1"
        android:gravity="center_horizontal"
        android:text="Torch a Button To Start"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginTop="16dp"
        android:textSize="21sp" />


    <LinearLayout
        android:id="@+id/layerbottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dialogue"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/player1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="P1:"
            android:textSize="21sp"
            android:layout_marginLeft="21dp"
            android:layout_marginRight="8dp"
            android:textColor="#000000"
            android:textAllCaps="true"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/player1score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="#000000"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/compt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="2dp"
            android:layout_marginLeft="32dp"
            android:text="P2:"
            android:textSize="21sp"
            android:textColor="#000000"
            android:textAllCaps="true"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/comptscore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="0"
            android:textColor="#000000"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/nextmovelabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next Move:"
            android:textSize="21sp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="8dp"
            android:textColor="#000000"
            android:textAllCaps="true"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textview2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="21sp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="8dp"
            android:textColor="#000000"
            android:textAllCaps="true"
            android:textStyle="bold" />

    </LinearLayout>

    <Button
        android:id="@+id/reset"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:layout_below="@id/layerbottom"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="5px"
        android:onClick="resetScore"
        android:textSize="15dp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginTop="16dp"
        android:text="Reset score" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:layout_below="@id/reset"
        android:gravity="center">



        <Button
            android:id="@+id/sizethree"
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:layout_marginLeft="21dp"
            android:textSize="14dp"
            android:textColor="#000000"
            android:layout_gravity="bottom"
            android:onClick="setSize3"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:text="Size 3 X 3" />
        <Button
            android:id="@+id/sizefive"
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:textSize="14dp"
            android:textStyle="bold"
            android:layout_gravity="bottom"
            android:onClick="setSize5"
            android:textColor="#000000"
            android:layout_marginTop="16dp"
            android:text="Size 5 X 5" />
    </LinearLayout>

